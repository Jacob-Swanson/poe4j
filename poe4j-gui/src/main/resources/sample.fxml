<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="545.0" prefWidth="735.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TabPane fx:id="tabPane" prefHeight="330.0" prefWidth="735.0">
         <tabs>
            <Tab closable="false" text="Extract GGPK">
               <content>
                  <VBox>
                      <padding>
                          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                      </padding>
                     <children>
                        <Label text="GGPK File" />
                         <HBox>
                            <children>
                                <TextField fx:id="ggpkFileTextField" promptText="C:\...\Content.ggpk" HBox.hgrow="ALWAYS" />
                                <Button onAction="#browseForGgpk" text="Browse">
                                    <HBox.margin>
                                        <Insets left="15.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                         </HBox>
                        <Label text="Extract Directory">
                           <padding>
                              <Insets top="15.0" />
                           </padding>
                        </Label>
                        <HBox>
                           <children>
                              <TextField fx:id="extractDirectoryTextField" promptText="C:\...\content\" HBox.hgrow="ALWAYS" />
                              <Button onAction="#browseForExtractDir" text="Browse">
                                 <HBox.margin>
                                    <Insets left="15.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                         <Button onAction="#extract" text="Extract">
                             <VBox.margin>
                              <Insets top="15.0" />
                             </VBox.margin>
                         </Button>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Extract Data">
               <content>
                  <HBox>
                     <children>
                        <VBox>
                           <children>
                              <Label text="Extracted GGPK Directory" />
                              <HBox>
                                 <children>
                                    <TextField fx:id="datFileTextField" promptText="C:\...\Quest.dat" HBox.hgrow="ALWAYS" />
                                    <Button onAction="#browseForDatFile" text="Browse">
                                       <HBox.margin>
                                          <Insets left="15.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                              </HBox>
                              <Label text="Extract Directory">
                                 <padding>
                                    <Insets top="15.0" />
                                 </padding>
                              </Label>
                              <HBox>
                                 <children>
                                    <TextField fx:id="datExtractDirTextField" promptText="C:\...\quest\" HBox.hgrow="ALWAYS" />
                                    <Button onAction="#browseForDatExtractDir" text="Browse">
                                       <HBox.margin>
                                          <Insets left="15.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </HBox>
                              <Label text="Data File">
                                 <padding>
                                    <Insets top="15.0" />
                                 </padding>
                              </Label>
                              <ComboBox fx:id="dataFileComboBox" prefHeight="25.0" prefWidth="326.0" />
                              <Button onAction="#extractDatFile" text="Extract">
                                 <VBox.margin>
                                    <Insets top="15.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <TextArea fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="200.0" />
                              <Button mnemonicParsing="false" text="Copy to Clipboard">
                                 <VBox.margin>
                                    <Insets top="15.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <ListView fx:id="logView" prefHeight="356.0" prefWidth="735.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </ListView>
   </children>
</VBox>
